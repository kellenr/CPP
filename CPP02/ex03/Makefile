# **************************************************************************** #

NAME = fixed

# **************************************************************************** #
#                                 variables                                    #
# **************************************************************************** #

CC = c++

CFLAGS = -Wall -Wextra -Werror -std=c++98

RM = rm -f

# **************************************************************************** #
#                                 SOURCES                                      #
# **************************************************************************** #

SRC = main.cpp bsp.cpp Fixed.cpp Fixed.hpp Point.cpp Point.hpp

OBJS = $(SRC:.cpp=.o)


# **************************************************************************** #
#                                 RULES                                        #
# **************************************************************************** #

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(OBJS) -o $@

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

# **************************************************************************** #
#                                clean RULES                                   #
# **************************************************************************** #

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
